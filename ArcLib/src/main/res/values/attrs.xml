<?xml version="1.0" encoding="utf-8"?>
<!--XML Attributes-->
<resources>
    <declare-styleable name="ArcLayout">
        <!--Default Corner Arc Type-->
        <attr name="ArcType" format="enum">
            <enum name="outer" value="1"/>
            <enum name="none" value="0"/>
            <enum name="inner" value="-1"/>
        </attr>
        <!--Top Left Corner Arc Type-->
        <attr name="TopLeftArc" format="enum">
            <enum name="outer" value="1"/>
            <enum name="none" value="0"/>
            <enum name="inner" value="-1"/>
        </attr>
        <!--Top Right Corner Arc Type-->
        <attr name="TopRightArc" format="enum">
            <enum name="outer" value="1"/>
            <enum name="none" value="0"/>
            <enum name="inner" value="-1"/>
        </attr>
        <!--Bottom Left Corner Arc Type-->
        <attr name="BottomLeftArc" format="enum">
            <enum name="outer" value="1"/>
            <enum name="none" value="0"/>
            <enum name="inner" value="-1"/>
        </attr>
        <!--Bottom Right Corner Arc Type-->
        <attr name="BottomRightArc" format="enum">
            <enum name="outer" value="1"/>
            <enum name="none" value="0"/>
            <enum name="inner" value="-1"/>
        </attr>
        <!--Default Axis for Outer Arc-->
        <attr name="OuterAxis" format="enum">
            <enum name="x_axis" value="0"/>
            <enum name="y_axis" value="1"/>
        </attr>
        <!--Top Left Axis for Outer Arc-->
        <attr name="TopLeftOuterAxis" format="enum">
            <enum name="x_axis" value="0"/>
            <enum name="y_axis" value="1"/>
        </attr>
        <!--Top Right Axis for Outer Arc-->
        <attr name="TopRightOuterAxis" format="enum">
            <enum name="x_axis" value="0"/>
            <enum name="y_axis" value="1"/>
        </attr>
        <!--Bottom Left Axis for Outer Arc-->
        <attr name="BottomLeftOuterAxis" format="enum">
            <enum name="x_axis" value="0"/>
            <enum name="y_axis" value="1"/>
        </attr>
        <!--Bottom Right Axis for Outer Arc-->
        <attr name="BottomRightOuterAxis" format="enum">
            <enum name="x_axis" value="0"/>
            <enum name="y_axis" value="1"/>
        </attr>
        <!--Default Corner Radius-->
        <attr name="ArcRadius" format="dimension"/>
        <!--Top Left Corner Radius-->
        <attr name="TopLeftRadius" format="dimension"/>
        <!--Top Right Corner Radius-->
        <attr name="TopRightRadius" format="dimension"/>
        <!--Bottom Left Corner Radius-->
        <attr name="BottomLeftRadius" format="dimension"/>
        <!--Bottom Right Corner Radius-->
        <attr name="BottomRightRadius" format="dimension"/>

        <!--Add stroke to layout-->
        <attr name="Stroke" format="boolean"/>
        <!--Stroke Color-->
        <attr name="StrokeColor" format="color"/>
        <!--Stroke Width-->
        <attr name="StrokeWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ArcButton">
        <!--Button Background-->
        <attr name="background"/>
        <!--Default Corner Arc Type-->
        <attr name="ArcType">
        </attr>
        <!--Top Left Corner Arc Type-->
        <attr name="TopLeftArc">
        </attr>
        <!--Top Right Corner Arc Type-->
        <attr name="TopRightArc">
        </attr>
        <!--Bottom Left Corner Arc Type-->
        <attr name="BottomLeftArc">
        </attr>
        <!--Bottom Right Corner Arc Type-->
        <attr name="BottomRightArc">
        </attr>
        <!--Default Axis for Outer Arc-->
        <attr name="OuterAxis">
        </attr>
        <!--Top Left Axis for Outer Arc-->
        <attr name="TopLeftOuterAxis">
        </attr>
        <!--Top Right Axis for Outer Arc-->
        <attr name="TopRightOuterAxis">
        </attr>
        <!--Bottom Left Axis for Outer Arc-->
        <attr name="BottomLeftOuterAxis">
        </attr>
        <!--Bottom Right Axis for Outer Arc-->
        <attr name="BottomRightOuterAxis">
        </attr>
        <!--Default Corner Radius-->
        <attr name="ArcRadius"/>
        <!--Top Left Corner Radius-->
        <attr name="TopLeftRadius"/>
        <!--Top Right Corner Radius-->
        <attr name="TopRightRadius"/>
        <!--Bottom Left Corner Radius-->
        <attr name="BottomLeftRadius"/>
        <!--Bottom Right Corner Radius-->
        <attr name="BottomRightRadius"/>

        <!--Add stroke to button-->
        <attr name="Stroke"/>
        <!--Stroke Color-->
        <attr name="StrokeColor"/>
        <!--Stroke Width-->
        <attr name="StrokeWidth"/>
    </declare-styleable>
</resources>